{
  "compilerOptions": {
    "target": "ES2022",
    "lib": ["ES2022"],
    "module": "ESNext",
    "moduleResolution": "Bundler",
    "resolveJsonModule": true,
    "allowJs": true,
    "strict": true,
    "noEmit": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "isolatedModules": true,
    "incremental": true,
    "baseUrl": ".",
    "paths": {
      "@web/*": ["./web/*"],
      "@app/*": ["./app/*"],
      "@shared/*": ["./shared/*"]
    }
  },
  "exclude": ["node_modules", "dist", "build", ".next", ".expo"]
}
